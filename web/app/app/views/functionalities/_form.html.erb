<%= form_for(@functionality,:html=>{role: "form"}) do |f| %>
	<% if @functionality.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@functionality.errors.count, "error") %> prohibited this functionality from being saved:</h2>

			<ul>
				<% @functionality.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="form-group row">
		<div class='col-md-6'>
			<%= f.label :name,class: 'label-class' %><br>
			<%= f.text_field :name,class: 'form-control',required: 'required',autofocus: true %>
		</div>
	</div>
	<div class="form-group row">
		<div class='col-md-6'>
			<%= f.label :operations,class: 'label-class' %>
			<%= f.select :permission_ids, Permission.all.order(:name).collect { |t| [t.name,t.id]},{prompt: 'Select Operation'},{:class=> "selectpicker dropup show-tick show-menu-arrow form-control",'data-live-search'=>"true",'data-show-subtext'=> "true",'data-size'=>"5",'multiple'=>'multiple'}%>
		</div>
	</div>

	<div class="form-group row">
		<div class='col-md-6'> 
			<%= f.submit "Save" ,class: 'btn btn-success'%>
		</div>
	</div>
<% end %>
