<div class="ts-main-content">
	<%=render "layouts/user_settings"%>
	<div class="content-wrapper">
		<div class="continer">
			<div id="settings_message"></div>
		</div>

		<div class='container'>
			<ul class="breadcrumb">                         
				<li class="breadcrumb-item active"><%= link_to "User Settings",scan_types_path%></li>
				<li class="breadcrumb-item">Enable/Disable Severities</li>
			</ul>           
			<div class="panel panel-default">
				<div class="panel-heading"><h4>Enable/Disable Severity Levels</h4></div>
				<div class="panel-body">
					<%=form_for :task,method: "POST",url: update_severities_settings_path,remote: true do |f|%>
						<div class='row'>
							<div class='col-md-6'>
								<div class="checkbox checkbox-slider--b-flat ">
									<label>
										<%=f.check_box :critical,checked: @tasks.include?("critical")%><span >Critical</span>
									</label>
								</div>
							</div>
							<div class='col-md-6'>
								<div class="checkbox checkbox-slider--b-flat ">
									<label>
										<%=f.check_box :high,checked: @tasks.include?("high")%><span >High</span>
									</label>
								</div>
							</div>
						</div>
						<div class='row'>
							<div class='col-md-6'>
								<div class="checkbox checkbox-slider--b-flat ">
									<label>
										<%=f.check_box :medium,checked: @tasks.include?("medium")%><span >Medium</span>
									</label>
								</div>
							</div>
							<div class='col-md-6'>
								<div class="checkbox checkbox-slider--b-flat ">
									<label>
										<%=f.check_box :low,checked: @tasks.include?("low")%><span >Low</span>
									</label>
								</div>
							</div>
						</div>

						<div class='row'>
							<div class='col-md-6'>
								<div class="checkbox checkbox-slider--b-flat ">
									<label>
										<%=f.check_box :info,checked: @tasks.include?("info")%><span >Info</span>
									</label>
								</div>
							</div>
						</div>
						<div class='form-group top-buffer'>
							<%=f.submit "Save",class: 'btn btn-danger' %>
						</div>
					<%end%>
				</div>
			</div>
		</div>
	</div>
</div>
